<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- draw tab background -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:centerColor="#565555"
                android:endColor="#2d2c2c"
                android:startColor="#8c8b8b" />

            <corners android:radius="5dip" />

            <stroke
                android:width="1dip"
                android:color="#161616" />
        </shape>
    </item>
    <item android:top="15dip" android:left="1dip" android:right="1dip" android:bottom="1dip">
        <shape android:shape="rectangle" >
             <gradient
                android:angle="-90"
                android:centerY="0.9"
                android:endColor="#282727"
                android:startColor="#282727" />
            <corners
                android:bottomLeftRadius="5dip"
                android:bottomRightRadius="5dip"
                android:topLeftRadius="1dip"
                android:topRightRadius="1dip" />

        </shape>
    </item>

</layer-list>