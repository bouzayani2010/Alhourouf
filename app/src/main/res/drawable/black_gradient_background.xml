<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- draw tab background -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:centerColor="#535353"
                android:endColor="#2d2d2c"
                android:startColor="#747474" />


        </shape>
    </item>
    <item android:top="20dip">
        <shape android:shape="rectangle" >
             <gradient
                android:angle="-90"
                android:centerY="0.9"
                android:endColor="#101010"
                android:startColor="#141414" />

        </shape>
    </item>

</layer-list>